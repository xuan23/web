@model AttandanceTracking.Models.StudentAttendanceReportVM
@using AttandanceTracking.Models
@using System.Linq

@{
    ViewData["Title"] = "Student Attendance Summary";
    var classes = ViewBag.Classes as IEnumerable<Classes> ?? Enumerable.Empty<Classes>();
    var subjects = ViewBag.Subjects as IEnumerable<Subject> ?? Enumerable.Empty<Subject>();
    var totalSessions = ViewBag.TotalSessions is int ts ? ts : 0;
}

<h2>Student Attendance Summary</h2>

<form method="get" class="row g-3 mb-3">
    <div class="col-md-3">
        <label class="form-label">Class</label>
        <select class="form-select" name="ClassId">
            <option value="">-- All --</option>
            @foreach (var c in classes)
            {
                <option value="@c.Id" selected="@(Model.Filter.ClassId == c.Id ? "selected" : null)">
                    @c.Code (@c.Description)
                </option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <label class="form-label">Subject</label>
        <select class="form-select" name="SubjectId">
            <option value="">-- All --</option>
            @foreach (var s in subjects)
            {
                <option value="@s.Id" selected="@(Model.Filter.SubjectId == s.Id ? "selected" : null)">
                    @s.Code (@s.Description)
                </option>
            }
        </select>
    </div>

    <div class="col-md-2">
        <label class="form-label">From</label>
        <input type="date" class="form-control" name="From" value="@(Model.Filter.From?.ToString("yyyy-MM-dd"))" />
    </div>

    <div class="col-md-2">
        <label class="form-label">To</label>
        <input type="date" class="form-control" name="To" value="@(Model.Filter.To?.ToString("yyyy-MM-dd"))" />
    </div>

    <div class="col-md-2 d-flex align-items-end">
        <button class="btn btn-primary w-100" type="submit">Filter</button>
    </div>
</form>

<div class="mb-2"><strong>Total Sessions in Range:</strong> @totalSessions</div>

@if (Model?.Rows == null || !Model.Rows.Any())
{
    <div class="alert alert-info">No students or sessions found for the selected filters.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Student</th>
                    <th>Class</th>
                    <th>Subject</th>
                    <th class="text-end">Present</th>
                    <th class="text-end">Sessions</th>
                    <th style="width:220px;">Attendance %</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                </tr>
            </thead>
            <tbody>
            @{
                var i = 1;
            }
            @foreach (var r in Model.Rows)
            {
                <tr>
                    <td>@i</td>
                    <td>@r.StudentName</td>
                    <td>@r.ClassCode</td>
                    <td>@r.SubjectCode</td>
                    <td class="text-end">@r.PresentCount</td>
                    <td class="text-end">@r.TotalSessions</td>
                    <td>
                        <div class="progress w-100" role="progressbar"
                             aria-valuenow="@r.Percentage" aria-valuemin="0" aria-valuemax="100" style="height:18px;">
                            <div class="progress-bar" style="width:@r.Percentage%;">@r.Percentage%</div>
                        </div>
                    </td>
                    <td>@(r.StartTime?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                    <td>@(r.EndTime?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                </tr>
                { i++; }
            }
            </tbody>
        </table>
    </div>
}
